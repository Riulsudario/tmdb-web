<div class="login">
  <div class="login-container">
    <div class="login-form">
      <%= tag.h1 'Sign In' %>

      <%= form_with url: user_session_path, method: :post, remote: false, local: true do |f| %>

        <div class="login-form-container">

          <div class="field">
            <%= f.email_field :email, autocomplete: "email", class: "input", required: true %>
            <%= f.label :emails, 'Email', class: "label" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", class: "input", required: true %>
            <%= f.label :password, 'Password', class: 'label' %>
            <%= tag.a 'Dont have an account?', class: 'links', href: new_user_registration_path %>
            <%= tag.a 'Forgot your password?', class: 'links', href: new_user_password_path %>
          </div>
        </div>

        <div class="buttons">
          <div class="field">
            <%= f.submit 'Submit', class: "submit-button" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class='omni-auth'>
        <%= form_tag(user_facebook_omniauth_authorize_path, class: 'facebook', method: :post) do %>
          <button type='submit'>Continue with Facebook</p>
          <%= image_tag 'facebook.png' %>
        <% end %>
    </div>

    <div class='omni-auth'>
      <%= form_tag('#', class: 'google', method: :post) do %>
        <button type='submit'>Continue with Google</p>
        <%= image_tag 'google.svg' %>
      <% end %>
    </div>
  </div>
</div>
